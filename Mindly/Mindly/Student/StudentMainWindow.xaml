<Window x:Class="Mindly.Student.StudentMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mindly.Student"
        mc:Ignorable="d"
        Title="Студент - Главное меню"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <TextBlock Text="Главное меню студента"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#FF333333"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30" />
                <Border Background="White" Padding="15" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Информация о успеваемости ученика"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#FF0078D4"
                           Margin="0,0,0,10" />
                        <Button x:Name="TheoryLessonsButton"
                                Content="Просмотр теоретических занятий"
                                Style="{StaticResource MenuButton}"
                                Margin="0,5" Click="TheoryLessonsButton_Click" />
                        <Button x:Name="GradesButton"
                                Content="Просмотр оценок"
                                Style="{StaticResource MenuButton}"
                                Margin="0,5" />
                        <Button x:Name="TestsButton"
                                Content="Прохождение тестов и зачетов"
                                Style="{StaticResource MenuButton}"
                                Margin="0,5" Click="TestsButton_Click" />
                        <Button x:Name="TestResultsButton"
                                Content="Просмотр результатов тестирования"
                                Style="{StaticResource MenuButton}"
                                Margin="0,5" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>