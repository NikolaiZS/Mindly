<Window x:Class="Mindly.Student.StudentTestMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mindly.Student"
        mc:Ignorable="d"
        Title="Mindly - Доступные тесты"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource BackButtonStyle}"
                    Content="Назад"
                    Click="BackButton_Click"
                    Margin="100 0 10 0"
                    Grid.Column="1" />
            <TextBlock Text="Доступные тесты"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Margin="10 0 0 0"
                       Foreground="#FF333333"
                       VerticalAlignment="Center"
                       Grid.Column="0" />
        </Grid>
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0 20 0 0">
            <ItemsControl x:Name="TestsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="300"
                                Height="200"
                                Background="White"
                                CornerRadius="8"
                                Margin="10"
                                Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Title}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#FF0078D4"
                                           TextWrapping="Wrap" />
                                <TextBlock Grid.Row="1"
                                           Text="{Binding Description}"
                                           FontSize="14"
                                           Foreground="#FF666666"
                                           Margin="0 10 0 0"
                                           TextWrapping="Wrap" />
                                <StackPanel Grid.Row="2"
                                            Orientation="Vertical"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Margin="0 5 0 0">
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontSize" Value="12" />
                                            <Setter Property="Foreground" Value="#FF888888" />
                                        </Style>
                                    </StackPanel.Resources>
                                    <TextBlock Text="{Binding QuestionCount, StringFormat='{}Вопросов: {0}'}" />
                                    <TextBlock Text="{Binding TimeLimit, StringFormat='{}Время: {0} мин'}" />
                                    <Button Content="Начать"
                                            Style="{StaticResource ModernButton}"
                                            Width="280"
                                            Click="StartTest_Click" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>