<Window x:Class="Mindly.Student.StudentTestResults"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mindly.Student"
        mc:Ignorable="d"
        Title="Mindly - Результаты тестирования"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource BackButtonStyle}"
                Content="Назад"
                Grid.Row="0"
                Grid.Column="0"
                Click="BackButton_Click" />
        <TextBlock Text="Результаты тестирования"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#FF333333"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="1" />
        <TextBlock Text="Поиск"
                   FontSize="16"
                   Margin="0,-10,10,0"
                   Foreground="#FF333333"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.Row="0"
                   Grid.Column="2" />
        <TextBox x:Name="txtSearch"
                 Width="250"
                 Style="{StaticResource ModernTextBox}"
                 Tag="Поиск по названию теста..."
                 HorizontalAlignment="Right"
                 Grid.Row="0"
                 Grid.Column="2" />
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="10"
                Margin="0,15,0,0"
                Grid.ColumnSpan="3">
            <DataGrid x:Name="testResultsGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Тест"
                                     Width="2*"
                                     Binding="{Binding TestName}" />
                    <DataGridTextColumn Header="Дата прохождения"
                                     Width="1.5*"
                                     Binding="{Binding TestDate}" />
                    <DataGridTextColumn Header="Результат"
                                     Width="1*"
                                     Binding="{Binding Score}" />
                    <DataGridTextColumn Header="Статус"
                                     Width="1*"
                                     Binding="{Binding Status}" />
                    <DataGridTemplateColumn Header="Детали" Width="1*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="🔍"
                                        Style="{StaticResource GridActionButton}"
                                        Tag="Просмотр деталей"
                                        Click="ViewDetails_Click" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <Button x:Name="btnRefresh"
                Content="Обновить список"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Stretch"
                Margin="10 5 0 0"
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="3" />
    </Grid>
</Window>