<Window x:Class="Mindly.Student.StudentTheoryLessons"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mindly.Student"
        mc:Ignorable="d"
        Title="Mindly - Теоретические занятия"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource BackButtonStyle}"
                Content="Назад"
                Grid.Row="0"
                Grid.Column="0"
                Click="BackButton_Click" />
        <TextBlock Text="Теоретические занятия"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#FF333333"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="1" />
        <TextBlock Text="Поиск"
                   FontSize="16"
                   Margin="0,-10,10,0"
                   Foreground="#FF333333"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.Row="0"
                   Grid.Column="2" />
        <TextBox x:Name="txtSearch"
                 Width="250"
                 Style="{StaticResource ModernTextBox}"
                 Tag="Поиск по названию..."
                 HorizontalAlignment="Right"
                 Grid.Row="0"
                 Grid.Column="2" />
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="10"
                Margin="0,15,0,0"
                Grid.ColumnSpan="3">
            <DataGrid x:Name="lessonsGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название"
                                     Width="2*"
                                     Binding="{Binding title}" />
                    <DataGridTextColumn Header="Ссылка"
                                     Width="1.5*"
                                     Binding="{Binding description}" />
                    <DataGridTextColumn Header="Дата проведения"
                                     Width="1.5*"
                                     Binding="{Binding date}" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <Button x:Name="btnRefresh"
                Content="Обновить список"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Stretch"
                Margin="10 5 0 0"
                Grid.Row="2"
                Grid.Column="0" />

        <Button x:Name="btnOpen"
                Content="Открыть"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Stretch"
                Margin="5 5 5 0"
                Background="#FF17A2B8"
                Grid.Row="2"
                Grid.Column="2" />
    </Grid>
</Window>