<Window x:Class="Mindly.Student.StudentTheoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mindly.Student"
        mc:Ignorable="d"
        Title="Mindly - Теоретический материал"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Style="{StaticResource BackButtonStyle}"
                    Content="Назад"
                    Click="BackButton_Click"
                    Margin="100 0 0 0"
                    Grid.Column="1" />
            <TextBlock x:Name="txtTheoryName"
                       Text="Название теоретического материала"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="#FF333333"
                       VerticalAlignment="Center"
                       Grid.Column="0" />
        </Grid>
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Margin="0 15 0 0">
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="20">
                <TextBlock x:Name="theoryText"
                           TextWrapping="Wrap"
                           FontSize="16"
                           LineHeight="24"
                           TextAlignment="Justify">
                    <!-- Текст подгружать из кода -->
                </TextBlock>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>