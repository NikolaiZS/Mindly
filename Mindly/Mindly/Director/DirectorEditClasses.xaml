<Window x:Class="Mindly.Director.DirectorEditClasses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mindly - Редактирование занятий"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource BackButtonStyle}"
                Content="Назад"
                Grid.Row="0"
                Grid.Column="0"
                Click="BackButton_Click" />

        <TextBlock Text="Управление занятиями"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#FF333333"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="1" />

        <TextBlock Text="Поиск"
           FontSize="16"
           Margin="0,-10,10,0"
           Foreground="#FF333333"
           VerticalAlignment="Top"
           HorizontalAlignment="Right"
           Grid.Row="0"
           Grid.Column="2" />
        <TextBox x:Name="txtSearch"
                 Width="250"
                 Style="{StaticResource ModernTextBox}"
                 Tag="Поиск по названию..."
                 HorizontalAlignment="Right"
                 Grid.Row="0"
                 Grid.Column="2" />

        <Border Grid.Row="1"
                Background="White"
                CornerRadius="8"
                Padding="10"
                Margin="0,15,0,0"
                Grid.ColumnSpan="3">
            <DataGrid x:Name="classesGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      SelectionMode="Single"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Название"
                                      Width="2*"
                                      Binding="{Binding Title}" />
                    <DataGridTextColumn Header="Преподаватель"
                                      Width="1.5*"
                                      Binding="{Binding Instructor}" />
                    <DataGridTextColumn Header="Дата"
                                      Width="1.5*"
                                      Binding="{Binding Date, StringFormat=dd.MM.yyyy HH:mm}" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <Button x:Name="btnUpdateList"
                Content="Обновить список"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Stretch"
                Margin="10 5 0 0"
                Grid.Row="2"
                Grid.Column="0"
                Click="btnUpdateList_Click" />
        <Button x:Name="btnEdit"
                Content="Изменить"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Stretch"
                Margin="5 5 5 0"
                Background="#FF007BFF"
                Grid.Row="2"
                Grid.Column="1"
                Click=" btnEdit_Click" />
        <Button x:Name="btnSave"
                Content="Сохранить"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Stretch"
                Margin="0 5 10 0"
                Background="#FF28A745"
                Grid.Row="2"
                Grid.Column="2"
                Click="btnSave_Click" />
    </Grid>
</Window>