<Window x:Class="Mindly.Director.DirectorMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mindly.Director"
        mc:Ignorable="d"
        Title="Руководитель - Панель управления"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource BackButtonStyle}"
                            Content="Выйти"
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="ExitButton_Click" />
                </StackPanel>
                <TextBlock Text="Панель руководителя"
                       FontSize="28"
                       FontWeight="SemiBold"
                       Foreground="#FF333333"
                       HorizontalAlignment="Center"
                       Margin="0,-50,0,0" />
                <Border Background="White" Padding="15" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Управление учителями и студентами"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="#FF0078D4"
                               Margin="0,0,0,10" />
                        <Button x:Name="AssignTeacherToStudentButton"
                                Content="Закрепить учителя за студентом"
                                Style="{StaticResource MenuButton}" Click="AssignTeacherToStudentButton_Click" />
                        <Button x:Name="EditLessonsButton"
                                Content="Редактирование занятий"
                                Style="{StaticResource MenuButton}" Click="EditLessonsButton_Click" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>