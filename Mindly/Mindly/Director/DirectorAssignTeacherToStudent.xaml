<Window x:Class="Mindly.Director.DirectorAssignTeacherToStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mindly.Director"
        mc:Ignorable="d"
        Title="Mindly - Закрепить учителя за студентом"
        Height="400"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid VerticalAlignment="Center">
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Закрепить учителя за студентом"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="#FF333333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />
            <TextBlock Text="Учитель"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#FF555555"
                   HorizontalAlignment="Left"
                   Margin="30,0,0,0" />
            <ComboBox x:Name="cbTeacher"
                 Width="300"
                 Style="{StaticResource ModernComboBox}"
                 Tag="Выберите пользователя"
                 Margin="0,0,0,10" />
            <TextBlock Text="Студент"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#FF555555"
                   HorizontalAlignment="Left"
                   Margin="30,0,0,0" />
            <ComboBox x:Name="cbStudent"
                  Width="300"
                  Style="{StaticResource ModernComboBox}"
                  Tag="Выберите пользователя"
                  Margin="0,0,0,10" />
            <Button x:Name="btnAssign"
                Content="Закрепить"
                Width="300"
                Style="{StaticResource ModernButton}" Click="btnAssign_Click" />
            <Button Style="{StaticResource BackButtonStyle}"
                Content="Назад"
                Width="300"
                Margin="20,10"
                Click="BackButton_Click" />
        </StackPanel>
    </Grid>
</Window>