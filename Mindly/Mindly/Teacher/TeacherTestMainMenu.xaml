<Window x:Class="Mindly.Teacher.TeacherTestMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mindly - Управление тестами"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Button Content="Новый тест" Margin="10,0" Style="{StaticResource ModernButton}" Click="CreateNewTest_Click" Grid.Column="0" />
        <TextBlock Text="Управление тестами"
           FontSize="22"
           Margin="0,0,0,0"
           FontWeight="SemiBold"
           Foreground="#FF333333"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           Grid.Row="0"
           Grid.Column="1" />
        <Button Content="Назад" Style="{StaticResource BackButtonStyle}" Click="BackButton_Click" Grid.Column="2" />

        <!-- Список тестов -->
        <ItemsControl Grid.Row="1" Grid.ColumnSpan="3" x:Name="TestsList">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Width="300" Height="190"
                            Background="White" CornerRadius="8"
                            Margin="10" Padding="15">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}"
                                     FontSize="18" FontWeight="SemiBold"
                                     Foreground="#FF0078D4" />

                            <TextBlock Text="{Binding Description}"
                                     FontSize="14" Margin="0,10"
                                     Foreground="#FF666666" TextWrapping="Wrap" />

                            <StackPanel>
                                <TextBlock Text="{Binding QuestionCount, StringFormat='Вопросов: {0}'}"
                                         FontSize="12" Foreground="#FF888888" />
                                <TextBlock Text="{Binding TimeLimit, StringFormat='Время: {0} мин'}"
                                         FontSize="12" Foreground="#FF888888" />
                            </StackPanel>

                            <Button Content="Изменить"
                                  Style="{StaticResource ModernButton}"
                                  Click="EditTest_Click" />
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>