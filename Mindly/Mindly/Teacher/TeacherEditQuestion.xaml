<Window x:Class="Mindly.Teacher.TeacherEditQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mindly - Редактор вопроса"
        Height="750"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Редактирование вопроса"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#FF333333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0" />

        <!-- Название вопроса -->
        <TextBlock Text="Название вопроса"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#FF555555"
                   Margin="0,0,0,5"
                   Grid.Row="1" />

        <TextBox x:Name="txtTitle"
                 Style="{StaticResource ModernTextBox}"
                 Tag="Введите название вопроса"
                 Margin="0,0,0,15"
                 Grid.Row="1" />

        <!-- Текст вопроса -->
        <TextBlock Text="Текст вопроса"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#FF555555"
                   Margin="0,0,0,5"
                   Grid.Row="2" />

        <TextBox x:Name="txtQuestion"
                 Style="{StaticResource ModernTextBox}"
                 VerticalContentAlignment="Top"
                 Tag="Введите текст вопроса"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Height="200"
                 VerticalScrollBarVisibility="Auto"
                 Grid.Row="2" />

        <!-- Варианты ответов -->
        <StackPanel Grid.Row="3" Margin="0,0,0,20">
            <TextBlock Text="Варианты ответов"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#FF555555"
                       Margin="0,0,0,10" />

            <ItemsControl x:Name="AnswersItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,10"
                                Background="White"
                                CornerRadius="5"
                                Padding="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBox Text="{Binding Text}"
                                         Style="{StaticResource ModernTextBox}"
                                         Tag="Вариант ответа"
                                         Margin="20,0,5,0" />

                                <RadioButton Grid.Column="1"
                                             IsChecked="{Binding IsCorrect}"
                                             GroupName="CorrectAnswer"
                                             VerticalAlignment="Center"
                                             ToolTip="Правильный ответ" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Кнопки управления -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить"
                    Style="{StaticResource ModernButton}"
                    Width="260"
                    Margin="0,0,0,0"
                    Click="Save_Click" />

            <Button Content="Назад"
                    Style="{StaticResource BackButtonStyle}"
                    Width="260"
                    Click="BackButton_Click" />
        </StackPanel>
    </Grid>
</Window>