<Window x:Class="Mindly.Teacher.TeacherEditQuestion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mindly - Редактор вопроса"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Редактирование вопроса"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#FF333333"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0" />

        <!-- Название вопроса -->
        <TextBlock Text="Название вопроса"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#FF555555"
                   Margin="0,0,0,5"
                   Grid.Row="1" />

        <TextBox x:Name="txtTitle"
                 Style="{StaticResource ModernTextBox}"
                 Tag="Введите название вопроса"
                 Margin="0,0,0,15"
                 Grid.Row="1" />

        <!-- Текст вопроса -->
        <TextBlock Text="Текст вопроса"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="#FF555555"
                   Margin="0,0,0,5"
                   Grid.Row="2" />

        <TextBox x:Name="txtQuestion"
                 Style="{StaticResource ModernTextBox}"
                 Tag="Введите текст вопроса"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Height="200"
                 VerticalScrollBarVisibility="Auto"
                 Grid.Row="2" />

        <Button Content="Сохранить"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="0,0,0,45"
                Click="Save_Click"
                Grid.Row="3" />

        <Button Content="Назад"
                Style="{StaticResource BackButtonStyle}"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Margin="0,0,0,0"
                Click="BackButton_Click"
                Grid.Row="3" Cursor="Hand" />
    </Grid>
</Window>