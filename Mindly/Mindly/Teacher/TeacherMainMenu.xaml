<Window x:Class="Mindly.Teacher.TeacherMainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mindly.Teacher"
        mc:Ignorable="d"
        Title="Преподаватель - Главное меню"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <StackPanel Orientation="Horizontal">
                    <Button Style="{StaticResource BackButtonStyle}"
                            Content="Выйти"
                            Width="200"
                            HorizontalAlignment="Left"
                            Click="ExitButton_Click" />
                </StackPanel>
                <TextBlock Text="Панель преподавателя"
                           FontSize="28"
                           FontWeight="SemiBold"
                           Foreground="#FF333333"
                           HorizontalAlignment="Center"
                           Margin="0,-50,0,0" />
                <Border Background="White" Padding="15" CornerRadius="8">
                    <StackPanel>
                        <TextBlock Text="Управление учебным процессом"
                                   FontSize="20"
                                   FontWeight="SemiBold"
                                   Foreground="#FF0078D4"
                                   Margin="0,0,0,10" />

                        <Button x:Name="AssignGradesButton"
                                Content="Назначение оценок"
                                Style="{StaticResource MenuButton}" Click="AssignGradesButton_Click" />

                        <Button x:Name="AssignExamsButton"
                                Content="Назначение экзаменов и зачетов"
                                Style="{StaticResource MenuButton}" Click="AssignExamsButton_Click" />

                        <Button x:Name="AssignTestsButton"
                                Content="Назначение тестов"
                                Style="{StaticResource MenuButton}" Click="AssignTestsButton_Click" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>