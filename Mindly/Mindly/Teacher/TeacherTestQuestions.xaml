<Window x:Class="Mindly.Teacher.TeacherTestQuestions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mindly - Управление вопросами теста"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Content="Новый вопрос"
                Style="{StaticResource ModernButton}"
                Click="AddQuestion_Click"
                Margin="0 0 0 0"
                Grid.Column="0" />
        <TextBlock Text="Управление вопросами теста"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#FF333333"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Column="1" />
        <Button Content="Назад"
                Style="{StaticResource BackButtonStyle}"
                Click="BackButton_Click"
                Grid.Column="2" />
        <ScrollViewer Grid.Row="1" Grid.ColumnSpan="3"
                      VerticalScrollBarVisibility="Auto"
                      Margin="0 20 0 0">
            <ItemsControl x:Name="QuestionsList">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="300" Height="190"
                                Background="White" CornerRadius="8"
                                Margin="10" Padding="15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="{Binding QuestionText}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#FF0078D4"
                                               TextWrapping="Wrap"
                                               MaxHeight="60"
                                               TextTrimming="CharacterEllipsis" />

                                    <TextBlock Text="{Binding Type}"
                                               FontSize="12"
                                               Foreground="#FF666666"
                                               Margin="0,10,0,0" />
                                </StackPanel>

                                <!-- Кнопки внизу -->
                                <StackPanel Grid.Row="1"
                                            VerticalAlignment="Bottom">
                                    <Button Content="Изменить"
                                            Style="{StaticResource ModernButton}"
                                            Margin="0,5,0,0"
                                            Click="EditQuestion_Click" />
                                    <Button Content="✖"
                                            Style="{StaticResource ModernButton}"
                                            Margin="0,2,0,0"
                                            Background="#FFDC3545"
                                            Click="DeleteQuestion_Click" />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>