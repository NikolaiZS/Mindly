<Window x:Class="Mindly.Administrator.AdminAppointmentToThePositionOfDirector"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mindly.Administrator"
        mc:Ignorable="d"
        Title="Mindly - Назначение руководителем"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid VerticalAlignment="Center">
        <StackPanel VerticalAlignment="Center" Margin="20">
            <TextBlock Text="Назначение руководителем"
                       FontSize="22"
                       FontWeight="SemiBold"
                       Foreground="#FF333333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />

            <ComboBox x:Name="cbUsers"
                      Width="300"
                      Style="{StaticResource ModernComboBox}"
                      Tag="Выберите пользователя"
                      Margin="0,0,0,0" />

            <Button x:Name="btnAppointDirector"
                    Content="Назначить руководителем"
                    Width="300"
                    Style="{StaticResource ModernButton}" />
            <Button Style="{StaticResource BackButtonStyle}"
                    Content="Назад"
                    Width="300"
                    Margin="20,10"
                    Click="BackButton_Click" />
        </StackPanel>
    </Grid>
</Window>