<Window x:Class="Mindly.Administrator.UserManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Администратор - Изменение пользователей"
        Height="700"
        Width="1200"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Style="{StaticResource BackButtonStyle}"
                Content="Назад"
                Grid.Row="0"
                Grid.Column="0"
                Click="BackButton_Click" />
        <TextBlock Text="Список пользователей"
                   FontSize="22"
                   Margin="0,0,0,0"
                   FontWeight="SemiBold"
                   Foreground="#FF333333"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="1" />
        <TextBlock Text="Поиск"
                   FontSize="16"
                   Margin="0,-10,10,0"
                   Foreground="#FF333333"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Grid.Row="0"
                   Grid.Column="2" />
        <TextBox x:Name="txtSearch"
                 Width="300"
                 Height="35"
                 Margin="0,0,10,0"
                 Padding="10"
                 FontSize="14"
                 Tag="Поиск пользователей..."
                 HorizontalAlignment="Right"
                 Style="{StaticResource ModernTextBox}"
                 Grid.Row="0"
                 Grid.Column="2" />

        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="10" Grid.ColumnSpan="3">
            <DataGrid x:Name="usersGrid"
                      AutoGenerateColumns="False"
                      HeadersVisibility="Column"
                      IsReadOnly="False"
                      SelectionMode="Single"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Имя"
                                      Width="2*"
                                      Binding="{Binding FirstName}" />
                    <DataGridTextColumn Header="Фамилия"
                                        Width="2*"
                                        Binding="{Binding LastName}" />
                    <DataGridTextColumn Header="Логин"
                                      Width="1.5*"
                                      Binding="{Binding Username}" />
                    <DataGridTextColumn Header="Роль"
                                      Width="1*"
                                      Binding="{Binding Role}" />
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <Button x:Name="btnUpdateList"
                Content="Обновить список"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Stretch"
                Margin="10 5 0 0"
                Grid.Row="2"
                Grid.Column="0" Click="btnUpdateList_Click" />

        <Button x:Name="btnSave"
                Content="Сохранить"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Stretch"
                Margin="5 5 5 0"
                Background="#FF007BFF"
                Grid.Row="2"
                Grid.Column="1"
                Click="btnSave_Click" />

        <Button x:Name="btnDelete"
                Content="Удалить"
                Style="{StaticResource ModernButton}"
                HorizontalAlignment="Stretch"
                Margin="0 5 10 0"
                Background="Red"
                Grid.Row="2"
                Grid.Column="2"
                Click="btnDelete_Click" />
    </Grid>
</Window>