<Window x:Class="Mindly.Administrator.AdminNewUserReg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mindly.Administrator"
        mc:Ignorable="d"
        Title="Mindly - Регистрация нового пользователя"
        Height="640"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF5F5F5">
    <Grid VerticalAlignment="Center">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel VerticalAlignment="Center" Margin="20">
                <TextBlock Text="Регистрация нового пользователя"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#FF333333"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20" />
                <TextBlock Text="Имя"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#FF555555"
                       HorizontalAlignment="Left"
                       Margin="30,0,0,0" />
                <TextBox x:Name="txtFirstName"
                    Width="300"
                    Style="{StaticResource ModernTextBox}"
                    Tag="Имя" />
                <TextBlock Text="Фамилия"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#FF555555"
                       HorizontalAlignment="Left"
                       Margin="30,0,0,0" />
                <TextBox x:Name="txtLastName"
                    Width="300"
                    Style="{StaticResource ModernTextBox}"
                    Tag="Фамилия" />
                <TextBlock Text="Логин"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#FF555555"
                       HorizontalAlignment="Left"
                       Margin="30,0,0,0" />
                <TextBox x:Name="txtLogin"
                    Width="300"
                    Style="{StaticResource ModernTextBox}"
                    Tag="Логин" />
                <TextBlock Text="Пароль"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#FF555555"
                       HorizontalAlignment="Left"
                       Margin="30,0,0,0" />
                <PasswordBox x:Name="txtPassword"
                        Width="300"
                        Style="{StaticResource ModernPasswordBox}"
                        Tag="Пароль" />
                <TextBlock Text="Роль пользователя"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Foreground="#FF555555"
                       HorizontalAlignment="Left"
                       Margin="30,0,0,0" />
                <ComboBox x:Name="cbxSelectRole"
                          Width="300"
                          Style="{StaticResource ModernComboBox}"
                          Tag="Желаемый курс" />
                <TextBlock Text="Курс (если студент)"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#FF555555"
                           HorizontalAlignment="Left"
                           Margin="30,0,0,0" />
                <ComboBox x:Name="cbxSelectCourse"
                          Width="300"
                          Style="{StaticResource ModernComboBox}"
                          Tag="Желаемый курс" />
                <Button x:Name="btnRegister"
                        Content="Зарегистрировать пользователя"
                        Width="300"
                        Margin="0 5 0 0"
                        Style="{StaticResource ModernButton}" Click="btnRegister_Click" />
                <Button Style="{StaticResource BackButtonStyle}"
                        Content="Назад"
                        Width="300"
                        Margin="20,10"
                        Click="BackButton_Click" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>